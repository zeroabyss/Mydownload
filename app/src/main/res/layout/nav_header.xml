        android:layout_height="wrap_content"
        android:id="@+id/nav_qianming"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:text="zeroabyss"/>
</RelativeLayout>